{
  "manifest_version": 3,
  "name": "上海大学选课课表优化插件",
  "version": "1.0",
  "description": "根据课程周次信息为课表着色",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://jwxt.shu.edu.cn/*",
    "https://byxk.shu.edu.cn/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jwxt.shu.edu.cn/jwglxt/xsxk/zzxkyzb_cxZzxkYzbIndex.html*",
        "https://byxk.shu.edu.cn/jwglxt/xsxk/zzxkyzb_cxZzxkYzbIndex.html*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
